{
    "Settings": {
        "CityDistrict": "Обжорск",
        "BeginDate": "2024-01-01 08:00:00",
        "EndDate": "2024-12-31 08:00:00",
        "DeliveryLog": "/logs/delivery.log",
        "DeliveryOrder": "orders.json"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "NLog": {
        "autoReload": true,
        "throwConfigExceptions": true,
        "targets": {
            "file": {
                "type": "File",
                "fileName": "${basedir}/logs/delivery.log",
                "layout": "${longdate} ${level} ${message} ${exception}"
            },
            "console": {
                "type": "Console",
                "layout": "${longdate} ${level} ${message} ${exception}"
            }
        },
        "rules": [
            {
                "logger": "*",
                "minLevel": "Info",
                "writeTo": "file"
            },
            {
                "logger": "*",
                "minLevel": "Info",
                "writeTo": "console"
            }
        ]
    }


}